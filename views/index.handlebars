<div class="flexbox-container">

    <div class="flexbox-item-1">            
        <img src="https://user-images.githubusercontent.com/60904436/89743690-2b3d1280-da6b-11ea-95e5-3d40348f285e.jpg" alt="burgerImg" id="burgerImg">
        <ul id="uneaten">
            <h2> Devour Burger </h2>
            {{#each burger}}
            {{#unless devoured}}
            {{> burger/burger-block devoured=false}}
            {{/unless}}
            {{/each}}
        </ul>

    </div>

    <div class="flexbox-item-2">
            
        <img src="https://user-images.githubusercontent.com/60904436/89743690-2b3d1280-da6b-11ea-95e5-3d40348f285e.jpg" alt="burgerImg" id="burgerImg">
    
        <h2>Eat A Burger</h2>
        
        <form class="burgerInput">
        <input type="text" id="newBurger" name="burger_name">
            <div class="flexbox-container">
                    
                <button type="submit" id="burgerBtn">Add Burger</button>

            </div>
        </form>
            
    </div>
    <div class="flexbox-item-3">
        <img src="https://user-images.githubusercontent.com/60904436/89743690-2b3d1280-da6b-11ea-95e5-3d40348f285e.jpg" alt="burgerImg" id="burgerImg">
        <ul id="eaten">
            <h2>You have devoured these burgers: </h2>
             {{#each burger}}
             {{#if devoured}}
             {{!-- > means you're looking in the partials directory --}}
             {{> burger/burger-block devoured=true}}
             {{/if}}
             {{/each}}
        </ul>

    </div>
</div>